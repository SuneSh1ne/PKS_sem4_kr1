<Window x:Class="PKS_sem4_kr1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Библиотека книг" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Панель фильтрации -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Убираем Placeholder, добавляем обычный TextBox с подсказкой через ToolTip -->
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0" 
                     ToolTip="Введите название для поиска"
                     TextChanged="SearchBox_TextChanged"/>
            
            <ComboBox x:Name="AuthorFilter" Width="150" Margin="0,0,10,0" 
                      DisplayMemberPath="FullName"
                      SelectionChanged="AuthorFilter_SelectionChanged">
                <ComboBox.ItemsSource>
                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>Все авторы</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
            
            <ComboBox x:Name="GenreFilter" Width="150" 
                      DisplayMemberPath="Name"
                      SelectionChanged="GenreFilter_SelectionChanged">
                <ComboBox.ItemsSource>
                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>Все жанры</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
        </StackPanel>

        <!-- DataGrid для книг -->
        <DataGrid Grid.Row="2" x:Name="BooksDataGrid" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="120"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="80"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить книгу" Width="120" Margin="5" 
                    Click="AddBook_Click"/>
            <Button Content="Редактировать" Width="120" Margin="5" 
                    Click="EditBook_Click"/>
            <Button Content="Удалить" Width="120" Margin="5" 
                    Click="DeleteBook_Click"/>
            <Button Content="Управление авторами" Width="150" Margin="5" 
                    Click="ManageAuthors_Click"/>
            <Button Content="Управление жанрами" Width="150" Margin="5" 
                    Click="ManageGenres_Click"/>
        </StackPanel>
    </Grid>
</Window>