<Window x:Class="PKS_sem4_kr1.Views.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0" 
                     ToolTip="Поиск по имени или стране"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Добавить" Width="80" Margin="5" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="80" Margin="5" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="80" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- DataGrid для авторов -->
        <DataGrid Grid.Row="1" x:Name="AuthorsDataGrid" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0,0,0,10"
                  SelectionChanged="AuthorsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="*"/>
                <DataGridTextColumn Header="Книг" Binding="{Binding Books.Count}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель редактирования -->
        <Border Grid.Row="2" x:Name="EditPanel" Background="#F0F0F0" Padding="10" 
                BorderBrush="#CCCCCC" BorderThickness="1" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя:" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="FirstNameBox" Margin="0,5" 
                         TextChanged="Input_TextChanged"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="LastNameBox" Margin="0,5"
                         TextChanged="Input_TextChanged"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата рождения:" Margin="0,5"/>
                <DatePicker Grid.Row="2" Grid.Column="1" x:Name="BirthDatePicker" Margin="0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Страна:" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="CountryBox" Margin="0,5"/>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
                    <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>